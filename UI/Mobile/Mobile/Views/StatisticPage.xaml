    <StackLayout>
        <StackLayout Orientation="Vertical" VerticalOptions="Start">

            <Label FontSize="Medium" FontAttributes="Bold" Text="{Binding TotalMinutesMeditatedNow}"/>
            <Label FontSize="Medium" FontAttributes="Bold" Text="{Binding TotalMinutesMeditatedNow}"/>
            <Label FontSize="Medium" FontAttributes="Bold" Text="{Binding TotalMinutesMeditatedToday}"/>
            <Label FontSize="Medium" FontAttributes="Bold" Text="{Binding TotalDaysMeditatedInRow}"/>
            <Label FontSize="Medium" FontAttributes="Bold" Text="{Binding TotalMinutesMeditated}"/>
            <Label FontSize="Medium" FontAttributes="Bold" Text="{Binding TotalHoursMissed}"/>
            <Label FontSize="Medium" FontAttributes="Bold" Text="{Binding Health}"/>
            <Label FontSize="Medium" FontAttributes="Bold" Text="{Binding Points}"/>
            <Label FontSize="Medium" FontAttributes="Bold" Text="{Binding Level}"/>
            <Label FontSize="Medium" FontAttributes="Bold" Text="{Binding LastDateMeditated}"/>
            <Label FontSize="Medium" FontAttributes="Bold"  Text="{Binding Multiplicator}"/>
            <Label FontSize="Medium" FontAttributes="Bold"  Text="{Binding Password}"/>
            <Label FontSize="Medium" FontAttributes="Bold"  Text="{Binding PlayerMessage}"/>
            <Label FontSize="Medium" FontAttributes="Bold"  Text="{Binding Address}"/>
            <Label FontSize="Medium" FontAttributes="Bold"  Text="{Binding Birthday}"/>
            <Label FontSize="Medium" FontAttributes="Bold"  Text="{Binding Gender}"/>
            <Label FontSize="Medium" FontAttributes="Bold"  Text="{Binding HttpResult}"/>
            <Label FontSize="Medium" FontAttributes="Bold"  Text="{Binding Email}"/>
        </StackLayout>

        <StackLayout Orientation="Vertical" VerticalOptions="EndAndExpand">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <ImageButton BackgroundColor="Transparent" x:Name="NavButtonMunkPage"  Grid.Column="0" Source="buddaicon.png" Clicked="NavButtonMunkPage_ClickedAsync"/>
                <ImageButton BackgroundColor="Transparent" x:Name="NavButtonPlayPage" Grid.Column="1"  Source="playicon.png" Clicked="NavButtonPlayPage_ClickedAsync"/>
                <ImageButton BackgroundColor="Transparent" x:Name="NavButtonSharePage" Grid.Column="3"  Source="shareicon.png"  Clicked="NavButtonSharePage_ClickedAsync"/>
                <ImageButton BackgroundColor="Transparent" x:Name="NavButtonStatisticPage" Grid.Column="2"  Source="statisticsicon.png"  Clicked="NavButtonStatisticPage_ClickedAsync"/>
                <ImageButton BackgroundColor="Transparent" x:Name="NavButtonSettingsPage" Grid.Column="4"  Source="settingsicon.png" Clicked="NavButtonSettingsPage_ClickedAsync"/>
            </Grid>
        </StackLayout>
    </StackLayout>




